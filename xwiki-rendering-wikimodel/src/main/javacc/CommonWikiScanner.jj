void emptyParagraph():
{
    int count = 0;
}
{
    getNL()  (LOOKAHEAD(2) getNL() { count++; } )*
    {
        if (count > 0) {
            fContext.onEmptyLines(count);
        }
    }
} 


void lines():
{
}
{
    line()
    ( LOOKAHEAD(2)
        newLine()
        line()
    )*
