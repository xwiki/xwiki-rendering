beginDocument
beginMacroMarkerStandalone [html] [] [<!-- comment1 -->
<p>hello</p>
<!-- comment2 -->]
onRawText [<!-- comment1 -->
<p>hello</p>
<!-- comment2 -->] [html/5.0]
endMacroMarkerStandalone [html] [] [<!-- comment1 -->
<p>hello</p>
<!-- comment2 -->]
endDocument
